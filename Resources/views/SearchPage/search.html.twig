{% extends "KunstmaanViewBundle::layout.html.twig" %}
{% block content %}
	You are searching for "{{ query }}"<br />
    <hr />
    {% if results %}
        {% for result in results %}
            <a href="{{ path('_slug', { 'slug': result.slug }) }}">{{ result.title }}</a><br />
        {% endfor %}
    {% else %}
        No results available.
    {% endif %}
{% endblock %}
				